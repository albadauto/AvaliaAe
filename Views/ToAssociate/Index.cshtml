@inject IHttpContextAccessor context
@model List<DocumentationModel>

<style>

    .ratings_stars {
        font-size: 30px !important;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col border border-dark border-1 m-5 rounded-3">
            <div class="text-center">
                <h5 class="text-muted">Fatec Santana de Parnaíba</h5>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="CNPJ" disabled>
                </div>

                <div class="col">
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email" disabled >
                </div>

            </div>
            @foreach(var i in Model)
            {
                @i.Associations.Institution.InstitutionName
            }

            <div class="row mb-3">
                <div class="col-8 mb">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Endereço" disabled>
                </div>
                <div class="col">
                    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Número" disabled>
                </div>

            </div>

            <div class="row mb-3">
                <div class="col">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="CEP" disabled>
                </div>

                <div class="col">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Diretor" disabled>
                </div>
            </div>

            <div class="row">
                <div class="col mb-5">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" disabled></textarea>
                        <label for="floatingTextarea2">Descrição</label>
                    </div>
                </div>
            </div>


        </div>
        <div class="col-5 border border-dark m-5 rounded-3">
            <div class="text-center">
                <h5 class="text-muted">Comentários</h5>
            </div>
            <div class="row">
                <div class="col">
                    <div class="comment mx-3">
                        <div class="row mt-3 mb-3">
                            <div class="col me-4 d-flex flex-row">
                                <div class="wrap me-3">
                                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" class="main-profile-img" />
                                </div>
                                <p>
                                    <b>
                                        <i class="bi bi-star"></i>
                                    </b>
                                </p> <br />

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="text-dark mx-1">
                                    teste
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<style>

    .main-profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border-style: solid;
        border-color: #FFFFFF;
        box-shadow: 0 0 8px 3px #B8B8B8;
        position: relative;
    }

    .wrap {
        position: relative;
    }

    .edit-button {
        position: absolute;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 1px solid grey;
        top: 0;
        left: 113px;
        background: white;
        color: blue;
    }

    .avaliate {
        margin-right: 100px !important;
    }

    .ratings_stars {
        font-size: 25px !important;
    }
</style>

<script>

    const stars = document.querySelectorAll('.ratings_stars');
    const boxRating = document.getElementById('rating-value');
    document.addEventListener('click', (evt) => {
        if (evt.target.classList.contains('ratings_stars')) {
            let clicktargetReached = false;
            for (const star of stars) {
                star.classList[clicktargetReached ? 'remove' : 'add']('selected');
                if (star === evt.target) {
                    boxRating.value = star.getAttribute('data-rating')

                    clicktargetReached = true;
                }
            }
        }
    });


    const idInst = window.location.href.split('/')[5]
    document.getElementById('id-institution').value = idInst
</script>


